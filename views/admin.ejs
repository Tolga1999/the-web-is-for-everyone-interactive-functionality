<%- include('./partials/head') %>

<!-- inladen van de header -->
<%- include('./partials/header') %>

<main>
    <!-- checkt of er iets posted is -->
    <% if(plantjePosted) { %>
        <p>posted</p>
    <% } else { %>
        <p>niet posted</p>
        <% } %>
    <h1>Voeg hier je nieuwe plantje toe!</h1>

    <h2>Plant gegevens</h2>
    <form action="/submitted" method="post">
        <div>
            <label for="datum">Aanmelddatum: <input type="text" name="datum"></label>
        </div>
        <div>
            <label for="naam">Naam: <input type="text" name="naam" required></label>
        </div>
        <div>
            <label for="landvanherkomst">Land van herkomst: <input type="text" name="landvanherkomst"></label>
        </div>
        <div>
            <label for="giftig">Giftig: <input type="text" name="giftig" required></label>
        </div>
        <div>
            <label for="slug">Slug (voorbeeld: calathea-fusion-white"): <input type="text" name="slug"></label>
        </div>
        <div>
            <label for="verpotten">Verpotten: <input type="text" name="verpotten"></label>
        </div>
        <div>
            <label for="voeding">Voeding: <input type="text" name="voeding"></label>
        </div>
        <div>
            <label for="fotos">Foto's: <input type="text" name="fotos" required></label>
        </div>
        <div>
            <input type="submit" value="Voeg plantje toe">
        </div>
    </form>
</main>


<%- include('./partials/foot') %>